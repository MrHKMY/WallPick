<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape4"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/titleToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/peopletCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/peopledone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/feelingCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/feelingdone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/animalCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/animaldone"
                android:layout_marginBottom="5dp"/>


            <ImageView
                android:id="@+id/computerCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/computerdone"
                android:layout_marginBottom="5dp"/>


            <ImageView
                android:id="@+id/artisticCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/traveldone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/placesCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/places"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/backgroundCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/backgrounddone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/natureCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/naturedone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/buildingCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/buildingdone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/musicCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/musicdone"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/foodCat"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/fooddone"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="@string/usetheSearchFeature"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>